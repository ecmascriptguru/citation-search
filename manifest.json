{
	"manifest_version": 2,
	
	"name": "Citation Search",
	"short_name": "Citation Search",
	"description": "Citation Search",
	"author": "Alexis Richard",
	"version": "0.0.3",
	
	"permissions": [
		"https://advance.lexis.com/*",
		"https://1.next.westlaw.com/*",
		"storage",
		"tabs"
	],

	"background": {
		"scripts": [
			"js/jquery.js",
			"js/background.js"
		]
	},
	"content_scripts": [
		{
			"js": [
				"js/jquery.js",
				"js/content.js"
			],

			"css": [
				"css/style.css"
			],

			"matches": [
				"https://advance.lexis.com/*",
				"https://1.next.westlaw.com/*"
			]
		}
	],
	"page_action": {
		"default_icon": {
			"19": "img/32.png",
			"38": "img/32.png"
		},
		"default_title": "Citation Search",
		"default_popup": "pages/popup.html"
	},
	"web_accessible_resources": [
	],

	"icons": {
		"16": "img/16.png",
		"18": "img/18.png",
		"19": "img/19.png",
		"32": "img/32.png",
		"38": "img/38.png",
		"48": "img/48.png",
		"64": "img/64.png",
		"96": "img/96.png",
		"128": "img/128.png"
	},

	"options_page": "pages/options.html"
}